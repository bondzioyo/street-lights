{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noDebugger": "error",
        "noDoubleEquals": "error"
      },
      "style": {
        "useConst": "warn"
      }
    }
  },
  "files": {
    "ignore": [
      "node_modules",
      "build",
      "coverage"
    ]
  }
}

